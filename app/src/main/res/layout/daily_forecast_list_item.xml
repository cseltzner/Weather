<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:padding="4dp">

    <TextView
        android:id="@+id/daily_forecast_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="24sp"
        android:fontFamily="@font/roboto"
        tools:text="Fri 12" />

    <ImageView
        android:id="@+id/daily_forecast_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/weather_icon"
        tools:src="@drawable/sunny" />

    <TextView
        android:id="@+id/daily_forecast_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        android:fontFamily="@font/roboto"
        tools:text="85&#176;\n85" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/daily_forecast_pop_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/probability_of_precipitation_icon"
            android:src="@drawable/pop" />

        <TextView
            android:id="@+id/daily_forecast_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textSize="20sp"
            android:fontFamily="@font/roboto"
            tools:text="22%" />

    </LinearLayout>


</LinearLayout>